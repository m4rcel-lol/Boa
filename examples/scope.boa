imp io

# Scope demonstration
x = "global"
io.print("Global x:", x)

fn outer():
    y = "outer"
    io.print("In outer, y:", y)
    fn inner():
        z = "inner"
        io.print("In inner, y:", y)
        io.print("In inner, z:", z)
    inner()

outer()

# Function creating functions
fn make_adder(n):
    fn adder(x):
        x + n
    adder

add5 = make_adder(5)
io.print("add5(10) =", add5(10))

add10 = make_adder(10)
io.print("add10(10) =", add10(10))
